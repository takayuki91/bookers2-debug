<% if @range == "User" %>
  <h2>Users search for "<%= @search_keyword %>"</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th colspan="1"></th>
          <th>Name</th>
          <th>Introduction</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <th><%= link_to user_path(user.id) do %>
          <%= image_tag user.get_profile_image, size:'50x50' %>
          <% end %></th>
          <th><%= user.name %></th>
          <th><%= user.introduction %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
<% else %>
  <h2>Books search for "<%= @search_keyword %>"</h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <th><%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %></th>
          <th><%= book.title %></th>
          <th><%= book.body %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
<% end %>

